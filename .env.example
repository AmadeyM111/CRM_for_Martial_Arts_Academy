# BJJ CRM System Configuration

# Database Configuration
DATABASE_URL=sqlite:///./bjj_crm.db
# For production: DATABASE_URL=postgresql://user:password@localhost/bjj_crm

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_group_chat_id_here

# Google Calendar Configuration
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_ID=your_calendar_id_here

# Application Settings
APP_NAME=BJJ Academy CRM
APP_VERSION=1.0.0
DEBUG=True

# Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Training Schedule
TRAINING_DAYS=Monday,Wednesday,Friday
TRAINING_TIME=20:30

# Pricing
MONTHLY_SUBSCRIPTION_PRICE=8000
SINGLE_TRAINING_PRICE=1500

# Notifications
NOTIFICATION_MISSED_CLASSES_THRESHOLD=2
NOTIFICATION_ENABLED=True
